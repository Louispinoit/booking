{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mx-auto max-w-sm py-8">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="bg-red-100 text-red-700 px-4 py-2 mb-4" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="text-3xl font-bold mb-4">S'inscrire</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, { 'attr': {'class': 'border border-gray-300 rounded-md py-2 px-4 mb-4 w-full'} }) }}
        {{ form_row(registrationForm.name, { 'attr': {'class': 'border border-gray-300 rounded-md py-2 px-4 mb-4 w-full'} }) }}
        {{ form_row(registrationForm.firstname, { 'attr': {'class': 'border border-gray-300 rounded-md py-2 px-4 mb-4 w-full'} }) }}
        {{ form_row(registrationForm.password, { 'attr': {'class': 'border border-gray-300 rounded-md py-2 px-4 mb-4 w-full'}, 'label': 'Password' }) }}
        {{ form_row(registrationForm.agreeTerms, { 'attr': {
            'class': 'border border-gray-300 rounded-md py-2 px-4 mb-4 ',
        } }) }}

        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full">
            Register
        </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
